{
  "version": 2,
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "games/**,frontend/dist/**"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/index.js"
    },
    {
      "source": "/wasm/:game/",
      "destination": "/api/index.js"
    },
    {
      "source": "/",
      "destination": "/api/index.js"
    },
    {
      "source": "/wasm/:path*",
      "destination": "/games/:path*"
    },
    {
      "source": "/assets/:path*",
      "destination": "/frontend/dist/assets/:path*"
    },
    {
      "source": "/favicon.svg",
      "destination": "/frontend/dist/favicon.svg"
    },
    {
      "source": "/homepage-preview.png",
      "destination": "/frontend/dist/homepage-preview.png"
    },
    {
      "source": "/main-theme.css",
      "destination": "/frontend/dist/main-theme.css"
    },
    {
      "source": "/game_shell.css",
      "destination": "/frontend/dist/game_shell.css"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ]
}
