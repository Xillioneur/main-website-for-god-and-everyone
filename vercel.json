{
  "version": 2,
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "games/**,frontend/dist/**,backend/census.json"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/index.js"
    },
    {
      "source": "/wasm/:game/",
      "destination": "/api/index.js"
    },
    {
      "source": "/wasm/(.*)",
      "destination": "/dist/wasm/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/((?!assets|wasm|favicon.svg|homepage-preview.png|main-theme.css|game_shell.css).*)",
      "destination": "/api/index.js"
    }
  ]
}
